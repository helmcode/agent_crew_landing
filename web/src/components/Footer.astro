---
import { useTranslations, getBaseUrl } from '../i18n/utils';
import type { Lang } from '../i18n/ui';

interface Props { lang?: Lang; }
const lang = Astro.props.lang ?? 'en';
const t = useTranslations(lang);
const base = getBaseUrl(lang);
---

<footer class="border-t border-slate-800/60 py-12 sm:py-16" style="background-color: #0a0f1e;">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex flex-col md:flex-row items-center md:items-start justify-between gap-8">
      <!-- Logo + tagline -->
      <div class="flex flex-col items-center md:items-start gap-3 max-w-xs">
        <div class="flex items-center gap-2">
          <div class="w-8 h-8 rounded-lg flex items-center justify-center" style="background: linear-gradient(135deg, #3b82f6, #8b5cf6);">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <circle cx="5" cy="9" r="3" fill="white" opacity="0.9"/>
              <circle cx="19" cy="9" r="3" fill="white" opacity="0.9"/>
              <circle cx="12" cy="5" r="3" fill="white"/>
              <path d="M12 8v4M8 11l4 2 4-2M8 13l4 2 4-2" stroke="white" stroke-width="1.5" stroke-linecap="round"/>
              <circle cx="5" cy="18" r="2.5" fill="white" opacity="0.7"/>
              <circle cx="12" cy="18" r="2.5" fill="white" opacity="0.7"/>
              <circle cx="19" cy="18" r="2.5" fill="white" opacity="0.7"/>
              <line x1="5" y1="12" x2="5" y2="15.5" stroke="white" stroke-width="1.5" opacity="0.7"/>
              <line x1="12" y1="13" x2="12" y2="15.5" stroke="white" stroke-width="1.5" opacity="0.7"/>
              <line x1="19" y1="12" x2="19" y2="15.5" stroke="white" stroke-width="1.5" opacity="0.7"/>
            </svg>
          </div>
          <span class="text-white font-bold text-lg tracking-tight">AgentCrew</span>
        </div>
        <p class="text-slate-400 text-sm text-center md:text-left leading-relaxed">
          {t('footer.tagline')}
        </p>
      </div>

      <!-- Links -->
      <div class="flex flex-wrap justify-center md:justify-end gap-6 sm:gap-8">
        <a
          href="https://github.com/helmcode/agent_crew_landing"
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center gap-2 text-slate-400 hover:text-white text-sm font-medium transition-colors duration-200"
        >
          <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"/>
          </svg>
          {t('footer.github')}
        </a>
        <a
          href={`${base}/docs`}
          class="text-slate-400 hover:text-white text-sm font-medium transition-colors duration-200"
        >
          {t('footer.docs')}
        </a>
        <a
          href="https://github.com/orgs/helmcode/projects/2/views/2"
          target="_blank"
          rel="noopener noreferrer"
          class="text-slate-400 hover:text-white text-sm font-medium transition-colors duration-200"
        >
          {t('footer.roadmap')}
        </a>
        <a
          href="https://calendly.com/helmcode/work"
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center gap-2 text-slate-400 hover:text-white text-sm font-medium transition-colors duration-200"
        >
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
            <line x1="16" y1="2" x2="16" y2="6"/>
            <line x1="8" y1="2" x2="8" y2="6"/>
            <line x1="3" y1="10" x2="21" y2="10"/>
          </svg>
          {t('footer.bookCall')}
        </a>
        <a
          href="https://helmcode.com"
          target="_blank"
          rel="noopener noreferrer"
          class="text-slate-400 hover:text-white text-sm font-medium transition-colors duration-200"
        >
          {t('footer.helmcode')}
        </a>
      </div>
    </div>

    <!-- Divider -->
    <div class="mt-10 pt-8 border-t border-slate-800/40 flex flex-col sm:flex-row items-center justify-between gap-3">
      <p class="text-slate-500 text-sm">
        {t('footer.copyright')}
      </p>
      <div class="flex items-center gap-1.5">
        <span class="w-1.5 h-1.5 rounded-full bg-green-400 animate-pulse"></span>
        <span class="text-slate-500 text-xs">{t('footer.openSource')}</span>
      </div>
    </div>
  </div>
</footer>
